@model IEnumerable<App.Domain.Flight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightIata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledDepartureUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledArrivalUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedDepartureUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedArrivalUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureTerminal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTerminal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureGate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalGate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightInfoLastCheckedUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureAirport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalAirport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Airline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aircraft)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightIata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduledDepartureUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduledArrivalUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedDepartureUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedArrivalUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureTerminal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalTerminal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureGate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalGate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightInfoLastCheckedUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureAirport!.Iata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalAirport!.Iata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightStatus!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Airline!.Iata)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Aircraft.IcaoHex) *@
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
