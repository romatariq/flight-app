@model App.Domain.Airport

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Airport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Iata" class="control-label"></label>
                <input asp-for="Iata" class="form-control" />
                <span asp-validation-for="Iata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeparturesLastCheckedUtc" class="control-label"></label>
                <input asp-for="DeparturesLastCheckedUtc" class="form-control" />
                <span asp-validation-for="DeparturesLastCheckedUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalsLastCheckedUtc" class="control-label"></label>
                <input asp-for="ArrivalsLastCheckedUtc" class="form-control" />
                <span asp-validation-for="ArrivalsLastCheckedUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
