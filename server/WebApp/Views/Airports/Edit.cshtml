                    <input class="form-check-input" asp-for="DisplayGate" /> @Html.DisplayNameFor(model => model.DisplayGate)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DisplayTerminal" /> @Html.DisplayNameFor(model => model.DisplayTerminal)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DisplayAirport" /> @Html.DisplayNameFor(model => model.DisplayAirport)
